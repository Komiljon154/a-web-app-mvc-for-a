<hc:Window x:Class="MusicHub.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicHub.Wpf.Views"
        xmlns:vms="clr-namespace:MusicHub.Wpf.ViewModels"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="MusicHub WPF Client" Height="600" Width="900">
    <Window.DataContext>
        <vms:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="{DynamicResource RegionBrush}" CornerRadius="0,10,10,0">
            <StackPanel Margin="10">
                <TextBlock Text="MusicHub" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
                <Button Content="Artists" Command="{Binding DataContext.SwitchViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding ArtistsVM}" Style="{StaticResource ButtonPrimary}" Margin="5"/>
                <Button Content="Bookings" Command="{Binding DataContext.SwitchViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding BookingsVM}" Style="{StaticResource ButtonPrimary}" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vms:ArtistsViewModel}">
                    <local:ArtistsView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:BookingsViewModel}">
                    <local:BookingsView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</hc:Window>
